# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /testgenerate/test/:scaleCode/:code            controllers.ArchivesManageController.test(scaleCode:String, code:Integer)

GET     /testgenerate/test/:scaleCode2            controllers.ArchivesManageController.test2(scaleCode2:Integer)

GET     /getDepartment/:deptId                      controllers.ArchivesManageController.getDepartment(deptId:Long)


GET     /saveDepartment/:name                       controllers.ArchivesManageController.saveDepartment(name:String)